= simple_form_for @blog_entry do |f|
  = f.input :title, :label => false, :hint => t('form.title')
  = f.input :content, :label => false, :input_html => { :cols => 100, :rows => 25 }
  %p.with-margin
    = f.button :submit, @blog_entry.new_record? ? t('add_label') : t('update_label')
    or
    = link_to t('cancel_label'), blog_entries_path, :confirm => t('cancel_confirmation')
