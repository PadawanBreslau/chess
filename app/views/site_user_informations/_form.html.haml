= simple_form_for @site_user_information do |f|
  = f.input :name, :label => false, :hint => t('form.name')
  = f.input :surname, :label => false, :hint => t('form.surname')
  = f.input :nick, :label => false, :hint => t('form.nickname')
  = f.input :rating, :label => false, :hint => t('form.rating')
  = f.input :about_me, :label => false, :hint => t('form.about_me')
  = f.country_select(:country_code, nil, iso_codes: true)
  = f.input :date_of_birth, as: :date, start_year: Date.today.year - 90,
                              end_year: Date.today.year - 10
  %p.with-margin
    = f.button :submit, !@site_user_information.is_initialized? ? t('add_label') : t('update_label')
    or
    = link_to t('cancel_label'), site_user_path(@site_user_information.site_user), :confirm => t('cancel_confirmation')
